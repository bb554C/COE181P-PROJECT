<Window x:Class="GradeViewer.Forms.NewEntry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradeViewer.Forms"
        mc:Ignorable="d"
        Title="NewEntry" MinWidth="400" MinHeight="400" Height="400" Width="400" WindowStartupLocation="CenterScreen" Closing="NewEntryClosing" Icon="/GradeViewer;component/Logo/BB Logo.PNG">
